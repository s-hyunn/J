		// 게시글 작성

		Board b1 = new Board();
		Statement stmt1 = conn.createStatement();

		System.out.println("📌 게시글 작성을 진행합니다");

		System.out.print("글 번호를 작성해주세요: ");
		b1.setBno(sc.nextLine());

		System.out.print("글 제목을 작성해주세요: ");
